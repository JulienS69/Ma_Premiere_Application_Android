                        android:layout_height="wrap_content" android:id="@+id/btnRetourdeMedic"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center_horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtView"
                        android:text="Nom - Effet - Prix - Composition - Contre Indication - DepÃ´t Legal"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center|center_horizontal|center_vertical"/>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/listMedic"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>